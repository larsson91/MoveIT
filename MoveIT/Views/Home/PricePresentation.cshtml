@model MoveIT.Models.PriceInfoViewModel

@{
    ViewBag.Title = "Prisförslag för bohagsflytt";
}

<h2>Prisförslag för bohagsflytt</h2>


@using (Html.BeginForm())
{
    <div>
        <hr />
        <div class="col-md-4">
            @Html.ValidationSummary(true)
            <div class="form-group">
                <span><strong>Offertnummer: </strong></span>
                @Html.DisplayFor(model => model.OffNo)
            </div>

            <div class="form-group">
                @Html.DisplayFor(model => model.Name)
            </div>

            <div class="form-group">
                @Html.DisplayFor(model => model.Email)
            </div>

            <div class="form-group">
                <span><strong>Från: </strong></span>
                @Html.DisplayFor(model => model.MoveFrom)
            </div>

            <div class="form-group">
                <span><strong>Till: </strong></span>
                @Html.DisplayFor(model => model.MoveTo)
            </div>

            <div class="form-group">
                <span><strong>Avstånd: </strong></span>
                @Html.DisplayFor(model => model.Distance)
            </div>

            <div class="form-group">
                <span><strong>Bostadens yta: </strong></span>
                @Html.DisplayFor(model => model.MainArea)
            </div>

            <div class="form-group">
                <span><strong>Vind/Källare: </strong></span>
                @Html.DisplayFor(model => model.ExtraArea)
            </div>

            <h4>Övrigt</h4>

            <div class="form-group">
                <span><strong>Piano: </strong></span>
                @if (Model.Piano)
                {
                    <text>Ja</text>
                }
                else
                {
                    <text>Nej</text>
                }
            </div>

            <div class="form-group">
                <span><strong>Packhjälp: </strong></span>
                @if (Model.HelpPacking)
                {<text>Ja</text>}
                else
                {<text>Nej</text>}
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <div>
                    @Html.LabelFor(model => model.EstimatedPrice)
                </div>
                <div>
                    @Html.DisplayFor(model => model.EstimatedPrice)
                    <span> inkl. moms</span>
                </div>
            </div>

            <div class="form-group">
                <p>Vi sparar ditt prisförslag 90 dagar, för att se prisförslaget igen, besök: </p>
                @Html.ActionLink("Offert", "PricePresentation", Model)
            </div>
            <div class="margin-up-2">
                @Html.ActionLink("Ändra", "OldView", Model, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
